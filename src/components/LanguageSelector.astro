---
import { languages } from '@/i18n/ui'
import { getLangFromUrl, getTranslatedPath } from '@/i18n/utils'

const supportedLanguages = Object.keys(languages)
const url = Astro.url
const currentLang = getLangFromUrl(url)
const { pathname } = url
---

<div class="relative">
	<select
		aria-label={currentLang === 'es' ? 'Cambiar idioma' : 'Change language'}
		onchange="location = this.value;"
		class="cursor-pointer appearance-none rounded-lg border border-gray-300 bg-transparent px-4 py-2 pr-8 hover:border-gray-400 focus:ring-2 focus:ring-gray-400 focus:outline-none"
	>
		{
			supportedLanguages.map((lang) => {
				const value = getTranslatedPath(
					pathname.replace(`/${currentLang}`, '').replace(/^\/+/, ''),
					lang
				)
				return (
					<option value={value} selected={lang === currentLang}>
						{languages[lang as keyof typeof languages]}
					</option>
				)
			})
		}
	</select>
	<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
		<svg class="h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
			<path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path>
		</svg>
	</div>
</div>
