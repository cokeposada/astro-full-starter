---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
import LanguageSelector from "../components/LanguageSelector.astro";
import logo from "../assets/logo.svg";
import emoji from "../assets/emoji.png";
import { Atom, Languages, LucideZap, Scaling, TowerControl, Waves, } from "lucide-react";

changeLanguage("en");
---

<Layout title={t("home.title")} description={t("home.description")}>
  <main>
    <section class="w-full min-h-screen">
      <div
        class="container flex flex-col gap-6 items-center justify-center min-h-screen px-6 py-8 mt-20"
      >
        <Image class="w-24" src={emoji} alt="Emoji" loading="eager" />
        <Image class="w-[30%] min-w-64" src={logo} alt="Coke Posada" loading="eager" />
        <h1 class="font-heading fluid-5xl xl:fluid-6xl font-bold text-center">
          {t("home.title")}
        </h1>
        <h2 class="text-center text-balance">{t("home.description")}</h2>
        <div
          class="grid grid-flow-row grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 my-20"
        >
          <div class="flex flex-col gap-6 w-full border-2 rounded-lg p-6">
            <Languages size={40} absoluteStrokeWidth />
            <h3 class="font-heading fluid-xl font-bold">
              {t("home.content.1.title")}
            </h3>
            <p>
              {t("home.content.1.description")}
            </p>
          </div>
          <div class="flex flex-col gap-6 w-full border-2 rounded-lg p-6">
            <LucideZap size={40} absoluteStrokeWidth />
            <h3 class="font-heading fluid-xl font-bold">
              {t("home.content.2.title")}
            </h3>
            <p>
              {t("home.content.2.description")}
            </p>
          </div>
          <div class="flex flex-col gap-6 w-full border-2 rounded-lg p-6">
            <Atom size={40} absoluteStrokeWidth />
            <h3 class="font-heading fluid-xl font-bold">
              {t("home.content.3.title")}
            </h3>
            <p>
              {t("home.content.3.description")}
            </p>
          </div>
          <div class="flex flex-col gap-6 w-full border-2 rounded-lg p-6">
            <Waves size={40} absoluteStrokeWidth />
            <h3 class="font-heading fluid-xl font-bold">
              {t("home.content.4.title")}
            </h3>
            <p>
              {t("home.content.4.description")}
            </p>
          </div>
          <div class="flex flex-col gap-6 w-full border-2 rounded-lg p-6">
            <Scaling size={40} absoluteStrokeWidth />
            <h3 class="font-heading fluid-xl font-bold">
              {t("home.content.5.title")}
            </h3>
            <p>
              {t("home.content.5.description")}
            </p>
          </div>
          <div class="flex flex-col gap-6 w-full border-2 rounded-lg p-6">
            <TowerControl size={40} absoluteStrokeWidth />
            <h3 class="font-heading fluid-xl font-bold">
              {t("home.content.6.title")}
            </h3>
            <p>
              {t("home.content.6.description")}
            </p>
          </div>
        </div>
        <p class="text-center">
          <Trans i18nKey="home.footer">
            <a
              href="http://cokeposada.com"
              target="_blank"
              rel="noopener noreferrer"
              class="underline underline-offset-2"></a>
          </Trans>
        </p>
        <LanguageSelector showFlag={true} />
      </div>
    </section>
    <a
      href="https://github.com/cokeposada/astro-full-starter"
      rel="noopener noreferrer"
      target="_blank"
      class="fixed right-6 top-6 inline-block fluid-sm group"
    >
      <span
        class="relative z-10 block px-5 py-3 overflow-hidden font-medium text-black transition-colors duration-300 ease-out border-2 border-black rounded-lg group-hover:text-white"
      >
        <span
          class="absolute inset-0 w-full h-full px-5 py-3 rounded-lg bg-white"
        ></span>
        <span
          class="absolute left-0 w-full h-48 transition-all duration-300 origin-top-right -rotate-90 -translate-x-full translate-y-12 bg-black group-hover:-rotate-180 ease"
        ></span>
        <span class="relative flex flex-row items-center justify-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-github"
            ><path
              d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
          >
          Fork on Github</span
        >
      </span>
      <span
        class="absolute bottom-0 right-0 w-full h-12 -mb-1 -mr-1 transition-all duration-300 ease-linear bg-black rounded-lg group-hover:mb-0 group-hover:mr-0"
        data-rounded="rounded-lg"></span>
    </a>
  </main>
</Layout>
